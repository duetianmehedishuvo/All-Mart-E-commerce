<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerlayout"
    tools:openDrawer="start"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/line">

        <include layout="@layout/tool_bar" android:id="@+id/toolBar"/>

    </LinearLayout>
    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bajar_listLL"
                android:background="@drawable/app_top_back"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="20dp"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_shop"
                    android:gravity="center"
                    android:text="আপনার আজকের বাজার লিস্ট \nদেখার জন্য এখানে Click করুন।"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <TextView
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/primary_text"
                android:gravity="center"
                android:text="আপনার পছন্দের Item টি বাছাই করুণঃ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/confectioneryIV"
                    android:src="@drawable/confectionery"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>


                <ImageView
                    android:src="@drawable/conmetics"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/cosmeticsIV"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/crockeries"
                    android:layout_weight="1"
                    android:id="@+id/crockeriesIV"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>


                <ImageView
                    android:src="@drawable/drink_desert"
                    android:layout_weight="1"
                    android:id="@+id/drinkDessertIV"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/electronics"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/electronicsIV"
                    android:layout_height="100dp"/>


                <ImageView
                    android:src="@drawable/fish_meat"
                    android:layout_weight="1"
                    android:id="@+id/fishMeatIV"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/fruits_vegitable"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/fruitsVegitableIV"
                    android:layout_height="100dp"/>


                <ImageView
                    android:src="@drawable/groceery"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/groceryIV"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/kids_toys"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/kidsToolsIV"
                    android:layout_height="100dp"/>


                <ImageView
                    android:src="@drawable/medicine"
                    android:layout_weight="1"
                    android:id="@+id/medicineIV"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/study"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/StudyToolsBTN"
                    android:layout_height="100dp"/>


                <ImageView
                    android:src="@drawable/snacks"
                    android:layout_weight="1"
                    android:id="@+id/snacksBTN"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/cylinder"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:id="@+id/gasBTN"
                    android:layout_height="100dp"/>


                <ImageView
                    android:src="@drawable/quran"
                    android:layout_weight="1"
                    android:id="@+id/quranBTN"
                    android:layout_width="0dp"
                    android:layout_height="100dp"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>


        </LinearLayout>


    </ScrollView>




    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:background="#EDFFFFFF"
        android:id="@+id/navigationView"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/navigation_header"
        android:layout_height="match_parent"/>


</androidx.drawerlayout.widget.DrawerLayout>