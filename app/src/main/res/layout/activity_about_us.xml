<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A1976D2"
    tools:context=".AboutUsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="fill_parent"
            android:id="@+id/toolbar"
            android:background="@drawable/my_gradient"
            android:layout_height="?attr/actionBarSize">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_toRightOf="@+id/toolImage"
                    android:id="@+id/toolname"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="#FFF"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="About Us"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_margin="3dp"
                android:padding="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000"
                    android:lineSpacingExtra="@dimen/search_icon_padding"
                    android:fallbackLineSpacing="true"
                    android:padding="5dp"
                    android:text="আসসালামু আলাইকুম,বর্তমান প্রযুক্তির সাথে তাল মিলিয়ে আপনাদের কথা মাথায় রেখে আমাদের এই ক্ষুদ্র প্রয়াস।প্রথমে যা একটি উদ্দেশ্যের উপায় থাকে মাত্র,মানুষ ক্রমে সেই উপায়টিকে উদ্দেশ্য করিয়া তোলে।আমাদের এই ক্ষুদ্র উদ্দেশ্যের উপায় আপনারা।কালকিনিতে এই প্রথম Online shopping এর মাধ্যম আপনাদের প্রতি মুহূর্তের প্রয়োজনীয় জিনিস অর্ডার করে এই উদ্দেশ্যকে সার্থক করে তুলুন।\nসময় মত আপনার পন্যটি হাতে তুলে দেয়া আমাদের কর্তব্য।বাজার সংক্রান্ত যেকোন সমস্যার কথা বলতে পারেন। নিচে দেয়া	ফোন নম্বরে এছাড়া আপনাদের জন্য Live Comments Section এর ব্যবস্থা করা হয়েছে, ধন্যবাদ।"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="3dp"
                android:padding="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:lineSpacingExtra="@dimen/search_icon_padding"
                    android:fallbackLineSpacing="true"
                    android:padding="10dp"
                    android:text="যোগাযোগ করুণঃ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="3dp"
                android:padding="3dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="#000"
                            android:padding="5dp"
                            android:text="Mobile:"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/teamPersonPhoneTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:autoLink="phone"
                            android:padding="5dp"
                            android:text="+8801711130560"
                            android:textColor="#000" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="#000"
                            android:padding="5dp"
                            android:text="Email:"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/teamPersonEmailTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:autoLink="email"
                            android:padding="5dp"
                            android:text="allmart410@gmail.com"
                            android:textColor="#000" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="#000"
                            android:padding="5dp"
                            android:text="Facebook:"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/teamPersonFBTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:autoLink="web"
                            android:padding="5dp"
                            android:text="https://web.facebook.com/All-Martcom-111210340562232/?ref=bookmarks&amp;_rdc=1&amp;_rdr"
                            android:textColor="#000" />

                    </LinearLayout>


                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>