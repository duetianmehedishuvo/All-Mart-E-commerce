<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:padding="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="1dp"
                app:cardBackgroundColor="#34C2185B"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/commentsNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Mehedi Hasan Suvo"
                    android:textColor="#000" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="5dp"
                android:padding="5dp"
                app:cardBackgroundColor="#2D512DA8"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/commentsAddressTV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Kalkini"
                    android:textColor="#240202" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/commentsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:padding="5dp"
                android:text="খুবেই ভাল উদ্যোগ, ভাল লাগছে Apps টা।খুবেই ভাল উদ্যোগ, ভাল লাগছে Apps টা।খুবেই ভাল উদ্যোগ, ভাল লাগছে Apps টা।খুবেই ভাল উদ্যোগ, ভাল লাগছে Apps টা।খুবেই ভাল উদ্যোগ, ভাল লাগছে Apps টা।খুবেই ভাল উদ্যোগ, ভাল লাগছে Apps টা।খুবেই ভাল উদ্যোগ, ভাল লাগছে Apps টা।খুবেই ভাল উদ্যোগ, ভাল লাগছে Apps টা।খুবেই ভাল উদ্যোগ, ভাল লাগছে Apps টা।"
                android:textColor="#000"
                android:textSize="16sp" />


        </androidx.cardview.widget.CardView>



    </LinearLayout>


</androidx.cardview.widget.CardView>